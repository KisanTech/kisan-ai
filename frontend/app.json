{
  "expo": {
    "name": "Project Kisan",
    "slug": "project-kisan",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "description": "AI-Powered Agricultural Assistant - Your Personal Agronomist in Your Pocket",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#22c55e"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "ai.codekheti.projectkisan",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to take photos of crops for disease diagnosis.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select crop images for disease diagnosis."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#22c55e"
      },
      "edgeToEdgeEnabled": true,
      "package": "ai.codekheti.projectkisan",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "apiUrl": "http://localhost:8000/api/v1"
    }
  },
  "plugins": [
    [
      "expo-audio",
      {
        "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone."
      }
    ]
  ]
}